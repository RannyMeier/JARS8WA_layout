    <div class="page">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main>
            <div class="top-row px-4 auth">
                <div>
                    <CoSetSelect />
                </div>
                <div>
                    <LoginDisplay />
                </div>
            </div>

            <article class="content px-4">
                @Body
            </article>
        </main>

        <div class="toolbar">
            <Toolbar />
        </div>


    </div>
</CascadingValue>

@code {
    private bool collapseNavMenu = true;
}